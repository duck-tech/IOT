<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TableLayout android:id="@+id/tbl_btn"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

            <Button
                android:id="@+id/btn_lighting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mg_btn"
                android:layout_weight="1"
                android:contentDescription="@string/text_lighting"
                android:background="@drawable/lighting"
                android:onClick="Lighting"/>

            <Button
                android:id="@+id/btn_fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mg_btn"
                android:layout_weight="1"
                android:contentDescription="@string/text_fan"
                android:background="@drawable/fan"
                android:onClick="Fan"/>

    </TableLayout>

    <Button
        android:id="@+id/btn_onall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl_btn"
        android:text="@string/onAll"
        android:onClick="onAll"/>

    <Button
        android:id="@+id/btn_offAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_onall"
        android:text="@string/offAll"
        android:onClick="offAll"/>

</RelativeLayout>